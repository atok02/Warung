        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView5"
        app:layout_constraintStart_toEndOf="@+id/margin"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
