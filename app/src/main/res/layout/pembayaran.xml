        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/rekomendasi_menu_kfc_removebg_preview" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
